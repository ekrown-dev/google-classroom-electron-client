{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "es2022": true,
    "browser": true
  },
  "rules": {
    "no-explicit-any": "off",
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "error",
    "prefer-const": "error",
    "no-var": "error",
    "no-console": "off",
    "no-undef": "off"
  },
  "ignorePatterns": [
    "dist/**/*",
    "node_modules/**/*",
    "*.js",
    "src/renderer/**/*"
  ]
}